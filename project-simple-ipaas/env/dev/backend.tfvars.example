# Backend Configuration for Terraform State
# 
# To use this configuration:
# 1. Create an Azure Storage Account for Terraform state
# 2. Create a blob container named "tfstate"
# 3. Copy this file to backend.tfvars and update with your values
# 4. Initialize Terraform: terraform init -backend-config=backend.tfvars
#
# Example values (replace with your actual values):

resource_group_name  = "rg-terraform-state"
storage_account_name = "sttfstatemyorg01"
container_name       = "tfstate"
key                  = "simple-ipaas-dev.tfstate"
